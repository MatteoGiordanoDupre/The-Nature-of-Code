// Nature of Code, Exercise 0.1

let walker;

function setup() {
  createCanvas(640, 240);
  walker = new Walker();
  background(255);
}

function draw() {
  walker.step();
  walker.show();
}

class Walker {
  constructor() {
    this.x = width / 2;
    this.y = height / 2;
  }

  show() {
    stroke(0);
    point(this.x, this.y);
  }

  // I just modified the ranges of the original fucntion to make it more likely to move left and down
  step() {
    let xstep = random(-1.5, 1);
    let ystep = random(-1.5, 1);
    this.x += xstep;
    this.y += ystep;
  }
}
